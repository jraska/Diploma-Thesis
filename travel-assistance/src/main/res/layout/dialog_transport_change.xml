<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/side_padding"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/dialog_transport_change_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:contentDescription="@string/photo"
        tools:src="@drawable/ic_train_48dp"/>

    <TextView
        android:id="@+id/dialog_transport_change_caption"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/side_padding"
        android:layout_marginStart="@dimen/side_padding"
        android:gravity="center_vertical"
        style="@style/TextMain"
        tools:text="Caption"
        />
</LinearLayout>