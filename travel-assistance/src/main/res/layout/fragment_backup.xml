<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings_backup_title"
        android:textAllCaps="true"
        android:textStyle="bold"
        style="@style/TextMain"/>

    <Button
        android:id="@+id/settings_make_backup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible"
        android:text="@string/settings_backup" />

    <Button
        android:id="@+id/settings_make_restore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings_restore" />

    <TextView
        android:id="@+id/settings_make_restore_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible"
        tools:text="Time of backup: 2016 ..."
        style="@style/TextMain" />
</LinearLayout>